#!/bin/sh

#!/bin/bash

## Used to kill all processes like variables passed.


# Dealing with IFS as we need to alter it to avoid space issues.
OrigIFS=$IFS
IFS=$'\n'

Proc[0]="$(echo ${4})"
Proc[1]="$(echo ${5})"
Proc[2]="$(echo ${6})"
Proc[3]="$(echo ${7})"
Proc[4]="$(echo ${8})"
Proc[5]="$(echo ${9})"
Proc[6]="$(echo ${10})"
Proc[7]="$(echo ${11})"

processes_to_kill=(${Proc[@]})


for proc_to_kill in ${processes_to_kill[@]}
  do

  declare -a killPIDs
  killPIDs=$(ps axww -o pid,command | grep -v bash | grep -v sh | grep -v grep | grep $proc_to_kill | awk '{print $1}')

  for i in ${killPIDs[@]}
    do
        echo "Killing PID $i"
#  kill -9 $i 2>/dev/null

#  killall $proc_to_kill 2>/dev/null

  done

done
